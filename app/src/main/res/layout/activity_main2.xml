<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BoucleJeu" android:background="@color/cardview_dark_background">

    <Button
            android:text="Oui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonYes"
            app:layout_constraintHorizontal_bias="0.16" app:layout_constraintVertical_bias="0.898"/>
    <Button
            android:text="Non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonNo"
            app:layout_constraintHorizontal_bias="0.78" app:layout_constraintVertical_bias="0.898"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/heart"
            tools:ignore="MissingConstraints"
            android:background="#1B1616" android:id="@+id/imgHearth"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgLaugh" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textHealth" app:layout_constraintEnd_toStartOf="@+id/imgMoney"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/laugh"
            tools:ignore="MissingConstraints"
            android:background="#1B1616" android:id="@+id/imgLaugh"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textLaugh" app:layout_constraintEnd_toStartOf="@+id/imgHearth"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/love"
            tools:ignore="MissingConstraints"
            android:background="#1B1616" android:id="@+id/imgLove"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgMoney" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textLove"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/symbolemonetairedollar"
            tools:ignore="MissingConstraints"
            android:background="#1B1616" android:id="@+id/imgMoney"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgHearth" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintEnd_toStartOf="@+id/imgLove"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textMoney"/>
    <TextView
            android:text=""
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textLaugh"
            app:layout_constraintEnd_toStartOf="@+id/textHealth" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLaugh" android:layout_marginBottom="520dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonYes"/>
    <TextView
            android:text=""
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textHealth"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgHearth" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textLaugh"
            android:layout_marginBottom="520dp" app:layout_constraintBottom_toTopOf="@+id/buttonYes"
            app:layout_constraintEnd_toStartOf="@+id/textMoney" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text=""
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textMoney"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textHealth" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgMoney" app:layout_constraintEnd_toStartOf="@+id/textLove"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="520dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonNo"/>
    <TextView
            android:text=""
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textLove"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLove" app:layout_constraintStart_toEndOf="@+id/textMoney"
            android:layout_marginBottom="520dp" app:layout_constraintBottom_toTopOf="@+id/buttonNo"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>