<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BoucleJeu" android:background="@color/cardview_dark_background">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:padding="20dp">
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:background="@drawable/border"
            android:src="@drawable/heart"
            tools:ignore="MissingConstraints"
            android:id="@+id/imgHearth"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgLaugh"
            app:layout_constraintBottom_toTopOf="@+id/textHealth" app:layout_constraintEnd_toStartOf="@+id/imgMoney"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/laugh"
            tools:ignore="MissingConstraints"
            android:background="@drawable/border"
            android:id="@+id/imgLaugh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textLaugh" app:layout_constraintEnd_toStartOf="@+id/imgHearth"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            />
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/love"
            tools:ignore="MissingConstraints"
            android:background="@drawable/border"
            android:id="@+id/imgLove"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgMoney"
            app:layout_constraintBottom_toTopOf="@+id/textLove"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:src="@drawable/symbolemonetairedollar"
            android:background="@drawable/border"
            android:id="@+id/imgMoney"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textMoney"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="3dp"
            android:paddingRight="6dp"
            android:paddingLeft="100dp"
            android:padding="20dp">
    <TextView
            android:text=""
            android:textColor="#fff"
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textLaugh"
            app:layout_constraintEnd_toStartOf="@+id/textHealth" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            android:layout_marginBottom="520dp"
            />
    <TextView
            android:text=""
            android:textColor="#fff"
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textHealth"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textLaugh"
            android:layout_marginBottom="520dp"
            app:layout_constraintEnd_toStartOf="@+id/textMoney" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text=""
            android:textColor="#fff"
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textMoney"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textHealth" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/textLove"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="520dp"
            />
    <TextView
            android:text=""
            android:textColor="#fff"
            android:layout_width="73dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_height="17dp" android:id="@+id/textLove"
            android:layout_marginTop="24dp"
             app:layout_constraintStart_toEndOf="@+id/textMoney"
            android:layout_marginBottom="520dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
    >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oui"
            android:textColor="#fff"
            android:background="@drawable/border"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" android:id="@+id/buttonYes"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"
                android:textColor="#fff"
                android:background="@drawable/border"
                android:padding="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/buttonNo"
                />
    </LinearLayout>

</RelativeLayout>